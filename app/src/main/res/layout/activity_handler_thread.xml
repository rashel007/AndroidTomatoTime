<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".threading.codinginflow.HandlerThreadActivity">


    <Switch
        android:id="@+id/tvSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btnThreadStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do Work"
        android:onClick="doWork"/>

    <Button
        android:id="@+id/btnThreadStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Message"
        android:onClick="removeMessage"/>





</LinearLayout>